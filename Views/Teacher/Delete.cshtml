@model UniversityApp.Models.Teacher

@{
    ViewData["Title"] = "Удалить преподавателя";
}

<h2>Удалить преподавателя</h2>

<h3>Вы уверены, что хотите удалить этого преподавателя?</h3>
<div>
    <h4>@Model.Name</h4>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Назад к списку</a>
    </form>
</div>